<!--pages/service/service.wxml-->
<view class="page">
	<!--左侧导航栏-->
	<scroll-view class="navbar-left">
		<view class="group-item {{currentTab==index ? 'active' : ''}}" wx:for="{{group.group_name}}" wx:key="unique" bindtap="navbarTap" data-idx="{{index}}">{{item}}</view>
	</scroll-view>

	<!--右侧列表-->
	<view class="list" wx:for="{{group.group_name}}" hidden="{{currentTab!=index}}" wx:key="unique" >
		<scroll-view class="">
			<view class="list-item" wx:for="{{group.group_list}}" wx:key="unique"></view>
			
		</scroll-view>
	</view>

	<!--右下角按钮-->
	<view class="img-add-position">
		<image class="img-service-style" src="../../src/service.png" animation="{{}}"></image>
		<image class="img-add-style" src="../../src/add_128_orange.png" animation="{{animPlus}}" bindtap="plusTap"></image>
	</view>

</view>